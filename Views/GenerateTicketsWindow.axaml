<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PrinTicket.Views.GenerateTicketsWindow"
        Title="Generar Tickets"
        Width="400" Height="300">
    <StackPanel Margin="20">
        <TextBlock Text="Generar Tickets" FontSize="18" HorizontalAlignment="Center"/>
        <TextBox x:Name="txtEventId" Watermark="ID del Evento" Margin="0,10"/>
        <Button Content="Generar" HorizontalAlignment="Center" Click="OnGenerateClicked"/>
        <Button Content="Cerrar" HorizontalAlignment="Center" Margin="0,20,0,0" Click="OnCloseClicked"/>
    </StackPanel>
</Window>
