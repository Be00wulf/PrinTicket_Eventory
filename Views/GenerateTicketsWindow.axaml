<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PrinTicket.Views.GenerateTicketsWindow"
    Title="Generar Tickets"
    Width="400"
    Height="300">

    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBlock Text="Generar nuevo ticket" 
                   FontSize="20" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <TextBlock Text="Seleccionar Congreso:" 
                   FontSize="15" 
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <ComboBox x:Name="EventoComboBox" Width="300" Margin="0,0,0,20"/>

        <Button Content="Generar Ticket" Width="200" Click="OnGenerarTicketClicked"/>
        <Button Content="Cerrar" Width="200" Margin="0,10,0,0" Click="OnCerrarClicked"/>

        <TextBlock x:Name="EstadoText"
                   FontSize="14"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>
    </StackPanel>
</Window>
