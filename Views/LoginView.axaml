<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:PrinTicket.ViewModels"
    x:Class="PrinTicket.Views.LoginView"
    x:DataType="vm:LoginViewModel">

    <UserControl.DataContext>
        <vm:LoginViewModel />
    </UserControl.DataContext>

    <Grid Background="#1E1E1E" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="10">

            <TextBlock Text="PrinTicket Login" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBox Watermark="Usuario" Text="{Binding Username}" />

            <TextBox Watermark="ContraseÃ±a" Text="{Binding Password}" PasswordChar="*" />

            <Button Content="Ingresar" Command="{Binding LoginCommand}" Margin="0,10,0,0"/>

            <TextBlock Text="{Binding LoginStatus}" Foreground="LightGray" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
