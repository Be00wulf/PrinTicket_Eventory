<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="https://github.com/avaloniaui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PrinTicket.ViewModels"
    mc:Ignorable="d"
    x:Class="PrinTicket.Views.DashboardView"
    x:DataType="vm:DashboardViewModel"
    Title="Dashboard - PrinTicket"
    Width="600" Height="400">

    <Design.DataContext>
        <vm:DashboardViewModel />
    </Design.DataContext>

    <StackPanel Margin="20">
        <TextBlock Text="Bienvenido al Dashboard" FontSize="24" Margin="0,0,0,20"/>
        <Button Content="Buscar Evento" Command="{Binding BuscarEventoCommand}" Margin="0,5"/>
        <Button Content="Generar Tickets" Command="{Binding GenerarTicketsCommand}" Margin="0,5"/>
        <Button Content="Ver Reportes" Command="{Binding VerReportesCommand}" Margin="0,5"/>
        <Button Content="Cerrar SesiÃ³n" Command="{Binding LogoutCommand}" Margin="0,5"/>
    </StackPanel>
</Window>
